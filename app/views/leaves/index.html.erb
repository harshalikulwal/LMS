<div class="form_container">
  <%= link_to 'Apply for leave',new_leafe_path %>
  <%= link_to 'Leave history',leave_history_leaves_path %>
  <%= link_to 'Pending Approval',leave_to_approve_leaves_path %>
  <%= link_to 'Holiday list',holidays_path %>
  <%if @leaves.present? %>
      <div class ="headline">
      Upcoming Leaves
      </div>
    <div class="title_bar"  style="color: Fuchsia; font: bold;background-color: #fff">
      <span style="padding-left: 10px; width:50px"> Slno.</span>
      <span style="width:130px"> Start Date</span>
      <span style="width:130px"> End Date </span>
      <span style="width:150px"> Reason </span>
      <span style="width:100px"> Status </span>
      <span style="width:130px"> Action</span>
    </div>
    <%  count = 0 %>
    <%  @leaves.each do |leave| %>
      <div class="title_bar">
        <span style="padding-left: 10px; width: 50px"> <%=  count = count + 1 %> </span>
        <span style="width:130px"> <%=  leave.start_date %></span>
        <span style="width:130px"> <%=  leave.end_date %></span>
        <span style="width:150px"> <%=  leave.reason_for_leave.truncate(15) %> </span>
        <span style="width:100px;color:red"> <%=leave.status%> </span>
        <span style="width:130px">
          <%= link_to 'Edit', edit_leafe_path(leave) %> &nbsp;|&nbsp;<%= link_to 'Delete', leafe_path(leave), :method => :delete, :confirm => "Are you Sure! You want to delete a Leave" %>
        </span>
      </div>
    <%end%>
<% else %>
  <div> You do not have any pending leaves </div>
<%  end %>
</div>
