<%= form_with model: @leaveinfo do |f| %>
<div>
  <%= f.label :start_date %><br>
  <%= f.date_field :start_date %>
</div>
<div>
  <%= f.label :end_date %><br>
  <%= f.date_field :end_date %>
</div>
<div>
  <%= f.label :reason_for_leave %><br>
  <%= f.text_area :reason_for_leave %>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>
